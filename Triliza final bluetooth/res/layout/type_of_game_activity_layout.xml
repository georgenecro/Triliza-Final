<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.6"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            >

        <ImageView
                android:id="@+id/imv_start_activity_xo_image"
                android:layout_width="@dimen/start_activity_layout_center_container_xo_image_width"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:src="@drawable/tic_tac_toe"

                />


        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>
        <LinearLayout
                android:id="@+id/ll_start_game_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/start_activity_layout_center_container_margin_top"
                >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.font.TextViewWithFontMainActivity
                        android:id="@+id/btn_two_players"
                        android:text="Two Players"
                        android:textSize="@dimen/bluetooth_activity_default_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_view_main_activity"
                        />
            </LinearLayout>

