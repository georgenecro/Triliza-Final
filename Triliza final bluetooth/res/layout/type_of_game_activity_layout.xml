                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.componentwithfont.TextViewWithFontMainActivity
                        android:id="@+id/btn_online"
                        android:text="@string/button_gametypes_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_view_main_activity"
                        />
            </LinearLayout>  -->
			<View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.font.TextViewWithFontMainActivity
                        android:id="@+id/btn_bluetooth"
                        android:text="Bluetooth Game"
                        android:textSize="@dimen/bluetooth_activity_default_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_view_main_activity"
                        />
            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                <com.font.TextViewWithFontMainActivity
                        android:id="@+id/btn_quit"
                        android:text="Quit"
                        android:textSize="@dimen/bluetooth_activity_default_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_view_main_activity"
                        />
            </LinearLayout>


        </LinearLayout>

        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.6"/>



    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >


    </LinearLayout>
</LinearLayout>