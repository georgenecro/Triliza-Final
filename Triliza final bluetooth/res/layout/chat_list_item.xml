<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
        >

    <com.font.TextViewWirhComicsFont
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/chat_list_item_sender_text_size"
            android:textColor="@color/blue"
            />

    <com.font.TextViewWirhComicsFont
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_list_item_message_text_view_margin_left"
            android:textSize="@dimen/chat_list_item_message_text_size"
            android:textColor="@color/black"
            />

</LinearLayout>